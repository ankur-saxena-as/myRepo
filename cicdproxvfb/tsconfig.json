{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "declaration": false,
        "removeComments": false,
        "noImplicitAny": false,
        "outDir": "target",
        "typeRoots": [ "./node_modules/@types" ],
        "types": ["node","cucumber"],
        "lib": ["es2015"]
    },
	"compileOnSave": true,
    "exclude": [
        "node_modules",
        "target"
    ]
}